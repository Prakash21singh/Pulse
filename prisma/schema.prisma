
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              Int           @unique  @default(autoincrement())
  userId          String        @unique
  username        String        @unique
  email           String
  image           String?
  password        String?
  createdAt       DateTime      @default(now())
  sessions        Session[]
}


model Session {
  id              Int           @unique      @default(autoincrement())
  topic           String
  description     String?
  initialTime     Int
  remainingTime   Int?
  isPaused        Boolean       @default(true)
  status          IStatus       @default(INCOMPLETE)
  creator         User          @relation(fields: [creatorId],references: [userId])
  creatorId       String
  createdAt       DateTime      @default(now())
}


enum IStatus {
  INCOMPLETE
  ONGOING
  COMPLETED
}